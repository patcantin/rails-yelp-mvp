<div class="container">
  <h2 class="text-center">Post review for <%= @restaurant.name %></h2>
  <div class="row">
    <div class="col-xs-12 col-sm-offset-3">

      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, placeholder: "Type a comment" %>
        <%= f.input :rating, placeholder: "Rating from 0 to 5" %>
        <%= f.submit "Post review", class: "btn-btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
